<Window x:Class="Learning_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Learning_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="MyGrid" Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBox Name="txt1" Grid.Row="0"  Margin="50" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
              FontFamily="Arial" AcceptsReturn="True" FontSize="20"  
                 BorderThickness="0,0,0,20" BorderBrush="Transparent"></TextBox>
        <TextBox Name="txt2" Grid.Row="1"  Margin="50" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
              FontFamily="Arial" AcceptsReturn="True" FontSize="20"  
                 BorderThickness="0,0,0,20" BorderBrush="Transparent"></TextBox>
        
    </Grid>
</Window>
