<Page x:Class="Learning_WPF.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Learning_WPF"
      mc:Ignorable="d" 
       d:DesignHeight="400" d:DesignWidth="800"
      Title="Page1">
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="40,10,40,10"/>
            <Setter Property="FontSize" Value="30"/>
        </Style>
    </Page.Resources>


    <Grid HorizontalAlignment="Stretch"  VerticalAlignment="Bottom" Height="350">
        <Button x:Name="button1_page1"  Grid.Row="0" Content="Ренат" Click="button1_page1_Click" />
        <Button x:Name="button2_page1" Grid.Row="1" Content="Показать" Click="button2_page1_Click" />
        <Label x:Name="label_page1" Grid.Row="3" Content="c" FontSize="30"/>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


    </Grid>
</Page>
